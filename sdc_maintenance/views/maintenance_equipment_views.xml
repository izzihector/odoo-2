<?xml version="1.0" encoding="utf-8"?>
    <odoo>

        <!-- equipment : views -->
        <record id="maintenance_equipment_view_form_inherit" model="ir.ui.view">
        <field name="name">maintenance.equipment.view.form.inherit</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(open_view_intervention_new)d"
                                type="action"
                                class="oe_inline oe_stat_button"
                                icon="fa-book"
                                context="{'search_default_equipment_id': active_id}"
                                help="show the Intervention for this Equipement">
                                <field name="intervention_count" widget="statinfo" string="Intervention"/>
                        </button>
                        <button name="%(open_view_incident_new)d"
                                type="action"
                                class="oe_inline oe_stat_button"
                                icon="fa-gear"
                                context="{'search_default_equipment_id': active_id}"
                                help="show the Preventive maintenance for this Equipement">
                               <field name="ot_count" widget="statinfo" string="Ordre de travail"/>
                        </button>
    
                        <button name="%(hr_equipment_request_action_pm)d"
                                type="action"
                                class="oe_inline oe_stat_button"
                                icon="fa-bell" 
                                context="{'search_default_equipment_id': active_id}"
                                help="show the Preventive maintenance for this Equipement">
                               <field name="pm_count" widget="statinfo" string="MP"/>
                        </button>
                            
                        <button name="%(hr_equipment_request_action_cm)d"
                                type="action"
                                class="oe_inline oe_stat_button"
                                icon="fa-wrench"
                                context="{'search_default_equipment_id': active_id}"
                                help="show the Preventive maintenance for this Equipement">
                               <field name="cm_count" widget="statinfo" string="MC"/>
                        </button>
                    </div>
					<field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" string="Name" placeholder="Equipment Name"/></h1>
                    </div>

                    <xpath expr="//field[@name='category_id']" position="after">
                        <field name="client_id"/>
                        <field name="brand_id"/>
                    </xpath>


                    <group>
                        <group>
                            <field name="model_id"/>
                            <field name="serial_no"/>
                            <field name="startingdate"/>
                            <field name="deadlinegar"/>
                            <field name="warranty_func"/>
                        </group>
                        <group>
                            <field name="category_id" widget="many2one"/>
                            <field name="team_id" widget="many2one"/>
                            <field name="team_leader_id" widget="many2one"/>
                            <field name="assign_date" groups="base.group_no_one"/>
                            <field name="scrap_date" groups="base.group_no_one"/>
                            <field name="location" string="Location"/>
                            <field name="zone_id" widget="many2one"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="note" placeholder="Description"/>
                            <field name="safety" placeholder="Safety"/>
                        </page>
                        <page string="Product Information">
                            <group>
                                <group>
                                    <field name="partner_id" context="{'default_supplier': True, 'default_customer': False}"/>
                                    <field name="partner_ref"/>
                                </group>
                                <group>
                                    <field name="cost" groups="maintenance.group_equipment_manager"/>
                                    <!--  <field name="warranty"/>-->
                                    <field name="technique_file"/>
                                </group>
                            </group>
                        </page>
                        <page string="Maintenance">
                            <group>
                                <group name="maintenance">
                                    <field name="next_action_date" class="oe_read_only" string="Next Preventive Maintenance"/>
                                    <label for="period" string="Preventive Maintenance Frequency"/>
                                    <div class="o_row">
                                        <field name="period"/> days
                                    </div>
                                    <label for="maintenance_duration" string="Maintenance Duration"/>
                                    <div class="o_row">
                                        <field name="maintenance_duration"/> hours
                                    </div>
                                </group>
                            </group>
                        </page>
                       <page string="List of Parts">
		               <field name="product_ids" >
                            	 <tree editable="bottom">
                            		<field name="product_id" on_change="onchange_product(product_id)"/>
                            		<field name="ref_intern" />
                            		<field name="qte" />
                            		<field name="type_id" />
                            	</tree>
		               </field>
                        </page>
                        <page string="Softwares">
                            <field name="software_ids" >
                                 <tree editable="bottom">
                                    <field name="name" />
                                    <field name="software_id"/>
                                </tree>
                            </field>
                        </page> 
                        <page string="Network">
                            <field name="network_ids" >
                                 <tree editable="bottom">
                                    <field name="name" />
                                    <field name="subred"/>
                                    <field name="gateway"/>
                                    <field name="dns1"/>
                                    <field name="dns2"/>
                                    <field name="mac_address"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Dicom">
                            <field name="dicom_ids" >
                                 <tree editable="bottom">
                                    <field name="name" />
                                    <field name="ip"/>
                                    <field name="port"/>
                                    <field name="dicom_type_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Accesory">
                            <field name="child_ids" >
                                 <tree editable="bottom">
                                    <field name="name" />
                                    <field name="number_equipment" />
                                    <field name="brand_id"/>
                                    <field name="model_id"/>
                                    <field name="serial_no"/>
                                    <field name="category_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
         
            </field>
        </record>



           

		<!-- list maintenenace -->	
         <record model="ir.ui.view" id="view_checklist_maintenance_tree">
            <field name="name">maintenance.checklist.history.tree</field>
            <field name="model">maintenance.checklist.history</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Checklist"  colors="red:date_planned&lt;=current_date and state=='draft';orange:date_planned&lt;=current_date and state=='confirmed'">
                    <field name="name" />
                    <field name="zone_id" />
                    <field name="user_id" />
                    <field name="date_planned"/>
                    <field name="date_end"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_checklist_maintenance_form">
            <field name="name">maintenance.checklist.history.form</field>
            <field name="model">maintenance.checklist.history</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Maintenance List">
                   <header>
                        <button name="action_confirmed" states="draft" string="To Confirm" type="object"/>
                        <button name="action_done" states="draft" string="Valider" type="object" />
		                <button name="action_draft" states="confirmed,done" string="Re-Work" type="object" />
                		<field name="state" widget="statusbar" />
                   </header>
                    <sheet>
                    <newline/>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="zone_id"/>
                            <field name="category_id"/>
                            <field name="checklist_id" />
                        </group> 
                        <group>
                            <field name="date_planned"/>
                            <field name="date_end"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <newline/>

                    <separator string="Verification Performed" colspan="4"/>
                    <field name="answers_ids" colspan="4" >
                        <tree string="Answers" editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="name" select="1"/>
                            <field name="answer" select="1"/>
                            <field name="detail" select="1"/>
                        </tree>
                    </field>        
                	<notebook>
	                    <page string="Work Order">
	                    <field name="ot_ids">
		                    <tree>
						            <field name="name"/>
				                    <field name="priority"/>
				                    <field name="partner_id"/>
				                    <field name="zone_id"/>
				                    <field name="user_id"/>
				                    <field name="date"/>    
				                    <field name="state"/>
		                    </tree>  
		                </field>  
	                    </page>
                    </notebook>
                    </sheet>
                     <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
                	</div>
                </form>
            </field>
        </record>

    
