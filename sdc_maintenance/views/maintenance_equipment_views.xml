    <odoo>

        <!-- equipment : views -->
        <record id="maintenance_equipment_view_form_inherit" model="ir.ui.view">
            <field name="name">maintenance.equipment.view.form.inherit</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                    <div class="oe_button_box" name="button_box">
                        <button name="%(open_view_intervention_new)d"
                                type="action"
                                class="oe_inline oe_stat_button"
                                icon="fa-book"
                                context="{'search_default_equipment_id': active_id}"
                                help="show the Intervention for this Equipement">
                                <field name="intervention_count" widget="statinfo" string="Intervention"/>
                        </button>
                        <button name="%(open_view_incident_new)d"
                                type="action"
                                class="oe_inline oe_stat_button"
                                icon="fa-gear"
                                context="{'search_default_equipment_id': active_id}"
                                help="show the Preventive maintenance for this Equipement">
                               <field name="ot_count" widget="statinfo" string="Ordre de travail"/>
                        </button>
    
                        <button name="%(hr_equipment_request_action_pm)d"
                                type="action"
                                class="oe_inline oe_stat_button"
                                icon="fa-bell" 
                                context="{'search_default_equipment_id': active_id}"
                                help="show the Preventive maintenance for this Equipement">
                               <field name="pm_count" widget="statinfo" string="MP"/>
                        </button>
                            
                        <button name="%(hr_equipment_request_action_cm)d"
                                type="action"
                                class="oe_inline oe_stat_button"
                                icon="fa-wrench"
                                context="{'search_default_equipment_id': active_id}"
                                help="show the Preventive maintenance for this Equipement">
                               <field name="cm_count" widget="statinfo" string="MC"/>
                        </button>
                    </div>

                    <xpath expr="//field[@name='name']" position="after">
                        <div class="o_row">
                            <field name="client_id" widget="res_partner_many2one" placeholder="Company" domain="[('is_company', '=', True)]"/>
                        </div>
                    </xpath>
                    <xpath expr="//field[@name='category_id']" position="after">
                            <field name="brand_id" widget="many2one"/>
                            <field name="model_id" widget="many2one"/>
                            <field name="serial_no"/>
                            <field name="startingdate"/>
                            <field name="deadlinegar"/>
                            <field name="warranty_func"/>
                    </xpath>
                    <xpath expr="//field[@name='maintenance_team_id']" position="after">
                            <field name="team_id" widget="many2one"/>
                            <field name="team_leader_id" widget="many2one"/>
                            <field name="helpdesk_team_id" widget="many2one"/>
                            <field name="assign_date" groups="base.group_no_one"/>
                            <field name="scrap_date" groups="base.group_no_one"/>
                            <field name="location" string="Location"/>
                            <field name="zone_id" widget="many2one"/>
                    </xpath>
                    <notebook>
                       <page string="List of Parts">
		               <field name="product_ids" >
                            	 <tree editable="bottom">
                            		<field name="product_id" on_change="onchange_product(product_id)"/>
                            		<field name="ref_intern" />
                            		<field name="qte" />
                            		<field name="type_id" />
                            	</tree>
		               </field>
                        </page>
                        <page string="Softwares">
                            <field name="software_ids" >
                                 <tree editable="bottom">
                                    <field name="name" />
                                    <field name="software_id"/>
                                </tree>
                            </field>
                        </page> 
                        <page string="Network">
                            <field name="network_ids" >
                                 <tree editable="bottom">
                                    <field name="name" />
                                    <field name="subred"/>
                                    <field name="gateway"/>
                                    <field name="dns1"/>
                                    <field name="dns2"/>
                                    <field name="mac_address"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Dicom">
                            <field name="dicom_ids" >
                                 <tree editable="bottom">
                                    <field name="name" />
                                    <field name="ip"/>
                                    <field name="port"/>
                                    <field name="dicom_type_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Accesory">
                            <field name="child_ids" >
                                 <tree editable="bottom">
                                    <field name="name" />
                                    <field name="number_equipment" />
                                    <field name="brand_id"/>
                                    <field name="model_id"/>
                                    <field name="serial_no"/>
                                    <field name="category_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
    
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
         
            </field>
        </record>


        <record id="maintenance.hr_equipment_view_kanban" model="ir.ui.view">
            <field name="name">equipment.kanban</field>
            <field name="model">maintenance.equipment</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="color"/>
                    <field name="technician_user_id"/>
                    <field name="client_id"/>
                    <field name="category_id"/>
                    <field name="serial_no"/>
                    <field name="model_id"/>
                    <field name="maintenance_ids"/>
                    <field name="maintenance_open_count"/>
                    <field name="next_action_date"/>
                    <field name="activity_ids" />
                    <field name="activity_state" />
                    <field name="ot_count"/>

                    <field name="cm_count"/>
                    <field name="pm_count"/>
                    <templates>
                        <t t-name="kanban-tooltip">
                            <ul class="oe_kanban_tooltip">
                                <li><b>Serial NÂ°:</b> <field name="serial_no"/></li>
                                <li><b>Model:</b> <field name="model_id"/></li>
                            </ul>
                        </t>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <t t-if="widget.editable"><li><a type="edit">Edit...</a></li></t>
                                    <t t-if="widget.deletable"><li><a type="delete">Remove</a></li></t>
                                    <li class="divider"></li>
                                    <li class="dropdown-header">Color</li>
                                    <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                </ul>
                            </div>
                            <div class="oe_kanban_content" tooltip="kanban-tooltip">
                                <div class="o_kanban_record_top">
                                    <b class="o_kanban_record_title"><field name="name"/><small><span t-if="record.model.raw_value"> (<field name="model"/>)</span></small></b>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div t-if="record.serial_no.raw_value"><field name="serial_no"/></div>
                                    <div t-if="!record.owner_user_id.raw_value">Unassigned</div>
                                    <div t-if="record.owner_user_id.raw_value"><field name="owner_user_id"/></div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">

                                      <div class="label label-danger" t-if="record.ot_count.raw_value" >
                                          <t t-raw="record.ot_count.raw_value"/> WO
                                      </div>
                                      <div class="label label-danger" t-if="record.cm_count.raw_value" >
                                          <t t-raw="record.cm_count.raw_value"/> MC
                                      </div>
                                      <div class="label label-danger" t-if="record.pm_count.raw_value" >
                                          <t t-raw="record.pm_count.raw_value"/> MP
                                      </div>
                                        <div class="label label-default" t-if="record.next_action_date.raw_value" >
                                            <t t-raw="moment(record.next_action_date.raw_value).format('MMMM Do')"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <div class="o_kanban_inline_block">
                                            <field name="activity_ids" widget="kanban_activity" />
                                        </div>
                                        <img t-att-src="kanban_image('res.users', 'image_small', record.owner_user_id.raw_value)" t-att-title="record.owner_user_id.value" width="27" height="27" class="oe_kanban_avatar"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

