<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <record model="ir.module.category" id="module_category_eam">
            <field name="name">Enterprise Asset Management</field>
            <field name="description">Helps you manage your assets.</field>
            <field name="sequence">6</field>
        </record>

        <record model="ir.module.category" id="module_category_asset">
            <field name="name">Asset</field>
            <field name="description">Helps you manage your asset processes.</field>
            <field name="sequence">6</field>
        </record>

        <record id="group_asset_customer" model="res.groups">
            <field name="name">Customer</field>
            <field name="category_id" ref="module_category_asset"/>
        </record>

        <record id="group_asset_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_asset"/>
            <field name="implied_ids" eval="[(4, ref('group_asset_customer'))]"/>
        </record>

        <record id="group_asset_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_asset"/>
            <field name="implied_ids" eval="[(4, ref('group_asset_user'))]"/>
        </record>

        <record model="res.users" id="base.user_root">
            <field eval="[(4,ref('group_asset_manager'))]" name="groups_id"/>
        </record>

        <record model="res.users" id="base.user_admin">
            <field eval="[(4,ref('group_asset_manager'))]" name="groups_id"/>
        </record>
    </data>

    <data noupdate="1">

    </data>
</openerp>
