      <record id="regulatory_technical_file_group_action" model="ir.actions.act_window">
          <field name="name">Technical File Group</field>
          <field name="res_model">regulatory.technical.file.group</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
      </record>

        <record id="regulatory_technical_file_view_form" model="ir.ui.view">
            <field name="name">regulatory.technical.file.view.form</field>
            <field name="model">regulatory.technical.file</field>
            <field name="arch" type="xml">
              <form string="Regulatory Technical File">
                  <sheet>
                      <div class="oe_title">
                          <label for="name" class="oe_edit_only" string="Name"/>
                          <h1>
                              <field name="name" placeholder="Name"/>
                          </h1>
                  </div>
                  <group>
                      <group>
                          <field name="technical_file_number"/>
                          <field name="type_area_id" widget="many2one"/>
                      </group>
                      <group>
                        <field name="group_id" widget="many2one"/>
                      </group>
                  </group>
                  <field name='description' placeholder="Description ......."/>
              </sheet>
              </form>
            </field>
        </record>

        <record id="regulatory_technical_file_view_tree" model="ir.ui.view">
            <field name="name">regulatory.technical.file.view.tree</field>
            <field name="model">regulatory.technical.file</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="technical_file_number"/>
                    <field name="type_area_id" widget="many2one"/>
                    <field name="group_id" widget="many2one"/>
                </tree>
            </field>
        </record>

        <record id="regulatory_technical_file_action" model="ir.actions.act_window">
            <field name="name">Technical File</field>
            <field name="res_model">regulatory.technical.file</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="regulatory_technical_file_registry_view_form" model="ir.ui.view">
            <field name="name">regulatory.technical.file.registry.view.form</field>
            <field name="model">regulatory.technical.file.registry</field>
            <field name="arch" type="xml">
              <form string="Technical File Registry">
                <header>
                      <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                  <div class="oe_title">
                          <label for="name" class="oe_edit_only" string="Name"/>
                          <h1>
                              <field name="name" placeholder="Name"/>
                          </h1>
                  </div>
                  <group>
                      <group>
                          <field name="technical_file_id" widget="many2one"/>
                          <field name="sales_team_id" widget="many2one"/>
                      </group>
                      <group>
                        <field name="responsible_id" widget="many2one"/>
                      </group>
                  </group>
                  <field name='observation' placeholder="Observation ......."/>
                </sheet>
              </form>
            </field>
        </record>

        <record id="regulatory_technical_file_registry_view_tree" model="ir.ui.view">
            <field name="name">regulatory.technical.file.registry.view.tree</field>
            <field name="model">regulatory.technical.file.registry</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="technical_file_id" widget="many2one"/>
                    <field name="sales_team_id" widget="many2one"/>
                    <field name="responsible_id" widget="many2one"/>
                </tree>
            </field>
        </record>

        <record id="regulatory_technical_file_registry_action" model="ir.actions.act_window">
            <field name="name">Technical File Registry</field>
            <field name="res_model">regulatory.technical.file.registry</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record id="regulatory_technical_file_creation_view_form" model="ir.ui.view">
            <field name="name">regulatory.technical.file.creation.view.form</field>
            <field name="model">regulatory.technical.file.creation</field>
            <field name="arch" type="xml">
              <form string="Technical File Creation">
                <header>
                      <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                  <sheet>
                      <div class="oe_title">
                          <label for="name" class="oe_edit_only" string="Name"/>
                          <h1>
                              <field name="name" placeholder="Name"/>
                          </h1>
                  </div>
                  <group>
                      <group>
                          <field name="responsible_id" widget="many2one"/>
                          <field name="sales_team_id" widget="many2one"/>
                      </group>
                      <group>
                        <field name="model_id" widget="many2one"/>
                      </group>
                  </group>
                  <field name='observation' placeholder="Observation ......."/>
              </sheet>
              </form>
            </field>
        </record>

        <record id="regulatory_technical_file_creation_view_tree" model="ir.ui.view">
            <field name="name">regulatory.technical.file.creation.view.tree</field>
            <field name="model">regulatory.technical.file.creation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sales_team_id" widget="many2one"/>
                    <field name="responsible_id" widget="many2one"/>
