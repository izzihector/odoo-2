          <field name="model">regulatory.technical.file.registry.stage</field>
          <field name="arch" type="xml">
              <kanban class="o_kanban_mobile">
                  <templates>
                      <t t-name="kanban-box">
                          <div t-attf-class="oe_kanban_global_click">
                              <div>
                                  <strong><field name="name"/></strong>
                              </div>
                          </div>
                      </t>
                  </templates>
              </kanban>
          </field>
      </record>

      <!-- stages : actions -->
      <record id="regulatory_technical_file_registry_stage_action" model="ir.actions.act_window">
          <field name="name">Technical File Registry Stages</field>
          <field name="res_model">regulatory.technical.file.registry.stage</field>
          <field name="view_mode">tree,kanban,form</field>
          <field name="view_type">form</field>
          <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Add a new stage in the Technical File Registry
            </p>
          </field>
      </record>

