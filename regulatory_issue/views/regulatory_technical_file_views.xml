<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

      <record id="regulatory_technical_file_registry_stage_view_search" model="ir.ui.view">
          <field name="name">regulatory.technical.file.registry.stage.view.search</field>
          <field name="model">regulatory.technical.file.registry.stage</field>
          <field name="arch" type="xml">
              <search string="Technical File Registry Stage">
                 <field name="name" string="Technical File Registry Stage"/>
              </search>
          </field>
      </record>

      <record id="regulatory_technical_file_registry_stage_view_tree" model="ir.ui.view">
          <field name="name">regulatory.technical.file.registry.stage.view.tree</field>
          <field name="model">regulatory.technical.file.registry.stage</field>
          <field name="arch" type="xml">
              <tree string="Technical File Registry Stage" editable="top">
                  <field name="sequence" widget="handle"/>
                  <field name="name"/>
                  <field name="fold"/>
                  <field name="done"/>
